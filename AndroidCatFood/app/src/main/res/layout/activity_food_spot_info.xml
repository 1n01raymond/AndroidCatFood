<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FoodSpotInfoActivity"
        android:weightSum="5"
        android:background="@color/colorMainBG">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/centerImage"
            android:layout_width="325dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/com_facebook_profile_picture_blank_portrait"
            app:civ_border_color="@color/colorFSInfoOwner"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"/>

    <TextView
            android:id="@+id/center_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="고양이 급식소"
            android:textAlignment="center"
            android:textSize="36sp"
            android:fontFamily="@font/bmjua"
            android:textColor="@color/colorFSInfoTitle"/>

    <TextView
            android:id="@+id/center_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="관리자 : 호롤료"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="@color/colorFSInfoOwner"
            android:fontFamily="@font/bmjua"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_weight="5">
    </android.support.v7.widget.RecyclerView>

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/btnBoard"
            android:src="@drawable/btn_community"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:background="@color/colorFSInfoTitle"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"/>

</LinearLayout>